            <section class="carrito">
                <h3 class="title"><span><i class="fas fa-shopping-cart"></i></span>Carrito</h3>
                <div class="productos-container">
                    <% for(let i = 0; i < 3; i++){ %>
                        <%- include("./partials/libro-carrito.ejs") %> 
                    <% } %> 
                </div>
                <div class="total-precio">
                    <div class="total">Total</div>
                    <div class="precio-final">$23.000</div>
                </div>
                <div class="comprar">
                    <button class="seguir-btn">Seguir comprando</button>
                    <button class="pagar-btn">Pagar</button>
                </div>
            </div>
        </section>

        <script src="/front-js/categories.js"></script>
    </body>

